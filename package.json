{
  "name": "optionable",
  "version": "0.1.2",
  "description": "A Typescript OOP implementation of monad",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "Th√©o HOLANDER <holandertheo@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tholander/optionable"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint:fix",
      "pre-push": "yarn test:cover"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "rimraf ./lib ./coverage",
    "prebuild": "yarn clean",
    "prepack": "yarn build",
    "postpack": "yarn clean",
    "lint": "eslint src/**/*.ts",
    "lint:test": "eslint tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "pretest": "yarn lint:fix",
    "test": "jest",
    "test:cover": "yarn test --coverage",
    "coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.5.0",
    "@types/jest": "^29.1.0",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "coveralls": "^3.1.1",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^29.1.1",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.2",
    "typescript": "^4.8.4"
  },
  "keywords": [
    "typescript",
    "optional",
    "monad",
    "type-safety",
    "null-check"
